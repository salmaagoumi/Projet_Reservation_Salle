        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_salle</th>
                <th>Capacite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.id }}</td>
                <td>{{ salle.nomSalle }}</td>
                <td>{{ salle.capacite }}</td>
